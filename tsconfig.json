{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "types": ["codeceptjs", "node"],
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@consts/*": ["./utils/consts/*"],
      "@helpers/*": ["./utils/helpers/*"],
    }

  },
  "exclude": ["node_modules"]
}